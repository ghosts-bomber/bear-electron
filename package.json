{
  "name": "bear-electron",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://127.0.0.1:7900 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:serve": "electron .",
    "build:electron": "npm run build && electron-builder --publish=never",
    "dist": "npm run build && electron-builder --publish=always",
    "postinstall": "electron-builder install-app-deps",
    "lint": "vue-tsc --noEmit",
    "clean": "rimraf dist dist-electron",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.12.2",
    "echarts": "^6.0.0",
    "element-plus": "^2.11.5",
    "monaco-editor": "^0.54.0",
    "pako": "^2.1.0",
    "parse-tar": "^1.2.2",
    "pinia": "^3.0.3",
    "qs": "^6.14.0",
    "tar": "^7.5.1",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@types/qs": "^6.9.17",
    "@types/tar": "^6.1.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "jest": "^30.2.0",
    "rimraf": "^6.0.1",
    "sass": "^1.93.2",
    "sass-embedded": "^1.93.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vue-tsc": "^3.1.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.example.bear-electron",
    "productName": "Bear Electron",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "electron",
    "vue3",
    "vite",
    "typescript",
    "desktop-app"
  ]
}
